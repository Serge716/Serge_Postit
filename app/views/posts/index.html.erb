<%= render 'shared/content_title', title: pluralize(@posts.size, 'post') %>

<% @posts.each do |post| %>
  <div class="row">
    <div class="span8 well">
      <%= render post.categories %>
      <h4><%= link_to post.title, post.url %></h4>
      <p><%= post.description %></p>
      <p>
        <span class="quiet">posted by <%= post.creator.username %></span>
        <small>at <%= post.created_at %></small>
      </p>
      <span>
        <%= link_to pluralize(post.comments.size, 'comment'), post_path(post) %>
      </span>
    </div>
  </div>
<% end %>
